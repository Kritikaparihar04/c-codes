 
bool searchInBST(BinaryTreeNode<int> *root , int k) {

    
    if(root==NULL)
        return false;
    
    if(root->data==k)
        return true;
   
    bool ans;
        if(k>root->data)
           ans= searchInBST(root->right,k);
    else if(k<root->data)
           ans= searchInBST(root->left,k);
    
    if(!ans)
        return false;

    return true;
        
}
