 #include<iostream>
 using namespace std;

 //function define
  int factorial(int x)
  {   if(x==0)
              {
                  return 1;
              }
      return x*factorial(x-1);               //recursion
  }
  int main()
  {
      int x;
      cout<<"Please enter the number :\n";
      cin>>x;
      cout<<"The factorial is:"<<factorial(x);
  }
