#include<iostream>

using namespace std;
class node{
public:
int data;
node *next;

//constructor parameterized
 node(int data) 
{
this->data=data;
next=NULL;
}
};
void print(node *head)
 {
     node *temp=head;
     while(temp!=NULL)
     {
         cout<<temp->data<<" ";
         temp=temp->next;
     }
 }
int main()
{
    //dynamically creating the nodes
   node *n1=new node(10);
   node *head=n1;         //n1 has the address of the new node ,n1 is created in the static memory and and data and next is in the heap memory
   node *n2=new node(20);
   node *n3=new node(30);
   node *n4=new node(40);


   //connect the nodes to each other
   n1->next=n2;
   n2->next=n3;
   n3->next=n4;
   
   //call the print function
   print(head);


}
