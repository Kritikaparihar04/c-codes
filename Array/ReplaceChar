void replaceCharacter(char input[], char c1, char c2) {
    // Write your code here
    int l=strlen(input);
    for(int i=0;i<l;i++)
    {
        if(input[i]==c1)
            input[i]=c2;
        
    }
    
}

#include <iostream>
#include <cstring>
using namespace std;

#include "solution.h"

int main() {
    char input[1000000];
    char c1, c2;
    cin >> input;
    cout<<"Enter the value of c1 ,c2";
    cin >> c1 >> c2;
    replaceCharacter(input, c1, c2);
    cout << input << endl;
}
